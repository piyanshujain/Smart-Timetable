<%- include ("./partials/header") %>
<div class="ui main text container">
   	<div class="ui huge header">Anons</div>
    <div class="ui top attached segment">
<div class="ui divided items">
	<% anons.forEach(function(anon){ %>
	 <div class="item">
	    <div class="content">
	      <a class="header"><%= anon.title %></a>
	      <div class="meta">
	        <span class="cinema"><%= anon.created.toDateString() %></span>
	      </div>
	      <div class="description">
	        <p><%= anon.body.substring(0,100); %></p>
	      </div>
	      <div class="extra">
	        <a href="/anons/<%=anon._id %>" class="ui floated basic violet button">
	          Read More
	          <i class="right chevron icon"></i>
	        </a>
	      </div>
	    </div>
	  </div>
	<% }); %>
</div>
</div>
  </div>
<%- include ("./partials/footer") %>
